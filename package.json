{
  "name": "backoffice",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:server": "ts-node ./src/index.ts",
    "dev:worker": "ts-node ./src/index-worker.ts",
    "dev": "concurrently npm:dev:*",
    "clean": "rimraf dist admin-ui build",
    "build:server": "tsc",
    "build": "pnpm run clean && pnpm run build:server && pnpm run copy-static",
    "start-prod": "pnpm run clean && pnpm run build && pnpm run start",
    "start:server": "APP_ENV=prod node ./dist/src/index.js",
    "start:worker": "APP_ENV=prod node ./dist/src/index-worker.js",
    "start": "concurrently npm:start:*",
    "codegen": "graphql-codegen --config codegen.ts",
    "copy-static": "rsync -a static/ dist/static/"
  },
  "dependencies": {
    "@apollo/client": "^4.0.7",
    "@pinelab/pinelab-invoice-plugin": "^4.4.2",
    "@vendure/asset-server-plugin": "^3.5.0",
    "@vendure/core": "^3.5.0",
    "@vendure/dashboard": "^3.5.0",
    "@vendure/email-plugin": "^3.5.0",
    "@vendure/graphiql-plugin": "^3.5.0",
    "@vendure/harden-plugin": "^3.5.0",
    "dotenv": "17.2.3",
    "graphql-tag": "^2.12.6",
    "ioredis": "^5.8.2",
    "mysql": "2.18.1",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/client-preset": "5.1.0",
    "@graphql-codegen/typescript": "^5.0.2",
    "@types/qrcode": "^1.5.5",
    "@types/react": "19.2.2",
    "@vendure/cli": "^3.5.0",
    "concurrently": "9.2.1",
    "rimraf": "^6.1.0",
    "typescript": "5.8.2"
  }
}
